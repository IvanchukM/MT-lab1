<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topMiddleButton"
        android:text="@string/name"
        android:textSize="40sp"
        android:gravity="center"
        />

   <Button
       android:id="@+id/topLeftButton"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:layout_constraintTop_toBottomOf="@id/nameTextView"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/midLeftButton"
       app:layout_constraintEnd_toStartOf="@id/topMiddleButton"
       app:layout_constraintHorizontal_chainStyle="packed"
       app:layout_constraintVertical_chainStyle="spread" />
    <Button
        android:id="@+id/topMiddleButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/topLeftButton"
        app:layout_constraintBottom_toTopOf="@id/middleButton"
        app:layout_constraintEnd_toStartOf="@id/topRightButton"
        />
    <Button
        android:id="@+id/topRightButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/topMiddleButton"
        app:layout_constraintBottom_toTopOf="@id/midRightButton"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/midLeftButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/botLeftButton"
        app:layout_constraintEnd_toStartOf="@id/middleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLeftButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Button
        android:id="@+id/middleButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/topMiddleButton"
        app:layout_constraintStart_toEndOf="@id/midLeftButton"
        app:layout_constraintBottom_toTopOf="@id/botMiddleButton"
        app:layout_constraintEnd_toStartOf="@id/midRightButton"
        />
    <Button
        android:id="@+id/midRightButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/topRightButton"
        app:layout_constraintStart_toEndOf="@id/middleButton"
        app:layout_constraintBottom_toTopOf="@id/botRightButton"
        app:layout_constraintEnd_toEndOf="parent"
        />

   <Button
       android:id="@+id/botLeftButton"
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:layout_constraintTop_toBottomOf="@id/midLeftButton"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/botMiddleButton"
       app:layout_constraintHorizontal_chainStyle="packed"
       />
    <Button
        android:id="@+id/botMiddleButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/middleButton"
        app:layout_constraintStart_toEndOf="@id/botLeftButton"
        app:layout_constraintEnd_toStartOf="@id/botRightButton"

        />
    <Button
        android:id="@+id/botRightButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/midLeftButton"
        app:layout_constraintStart_toEndOf="@id/botMiddleButton"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/botMiddleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="45sp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/restartGameButton"

        app:layout_constraintTop_toBottomOf="@id/winnerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="@string/restart_game"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>